[{
    "layer": "top",
    "output": ["DP-1"],
    "spacing": 0,
    "margin-top": 10,
    "margin-left": 10,
    "margin-right": 10,

    "modules-left": [
        "wlr/taskbar",
        "idle_inhibitor",
        "hyprland/workspaces",
	    "custom/wallpaper"
    ],

    "modules-center": [
	"custom/updates",
        "hyprland/window",
        "custom/spotify"
    ],

    "modules-right": [
        "pulseaudio",
        "clock",
        "temperature",
        "cpu",
        "memory",
        "disk",
        "network",
        "bluetooth",
        "custom/logout"
    ],


     "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": "ÓÑ•",
            "2": "ÓÉ¨",
            "3": "ÔÖÅ",
            "4": "Ôõ¢",
            "5": "ÓÑ•",
            "6": "ÓÉ¨",
            "7": "ÔÖÅ",
            "8": "Ôõ¢",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        },
	"persistent-workspaces": {
	    "*": 3,
	    }
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 17,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty",
            "firefoxdeveloperedition"
        ]
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },



    "hyprland/window": {
        "separate-outputs": true,
    },


    "pulseaudio": {
        //"scroll-step": 1,
        "format": "{icon}  {volume}%",
        "format-muted": "üîá",
        "format-bluetooth": "{volume}% {icon}",
        "format-icons": {
            "headphone": ["ÔÄ•  ÔÄ¶", "ÔÄ•  ÔÄß", "ÔÄ•  ÔÄ®"],
            "hands-free": "ÔÄ•",
            "headset":  ["ÔÄ•  ÔÄ¶", "ÔÄ•  ÔÄß", "ÔÄ•  ÔÄ®"],
            "phone": ["ÔÇï  ÔÄ¶", "ÔÇï  ÔÄß", "ÔÇï  ÔÄ®"],
            "portable": ["ÔÄ•  ÔÄ¶", "ÔÄ•  ÔÄß", "ÔÄ•  ÔÄ®"],
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "/usr/bin/pavucontrol",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%"
    },

    "network": {
        "format": "ÔÉÆ {bandwidthUpOctets} ÔÉ≠ {bandwidthDownOctets}",
        "interval": 30,
	"tooltip-format": "{ipaddr}/{cidr} Û∞äó",
    },

    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "format": "Ôù® {temperatureC}¬∞C"
    },

    "cpu": {
        "interval": 10,
        "format": "  /  Ôãõ {}%",
        "max-length": 10
    },

    "memory": {
        "interval": 30,
        "format": "  /  Ôî∏ {}%",
        "max-length": 10
    },

    "disk": {
        "interval": 30,
        "format": "  /  ÔÇ† {percentage_used}%",
        "path": "/"
    },

    "bluetooth": {
        "format": "Ôäì {status}",
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager"
    },


    "clock":  {
        "interval": 60,
        "format": "{:%A, %I:%M %p}",
        "format-alt": "{%B %d, %Y (%R)}",
        "max-length": 35,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },



    // Custom

    "custom/logout": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip": false
    },

    "custom/updates": {
    	"format": "ÔÉÆ {}",
    	"tooltip": "{}",
    	"escape": true,
    	"return-type": "json",
    	"restart-interval": 3600,
    	"tooltip": true,
    	"exec": "~/.config/dotfiles/scripts/updates.sh",
    	"on-click": "alacritty -e ~/.config/dotfiles/scripts/installupdates.sh"
    },

    /**
     *
     *
     * https://raw.githubusercontent.com/Alexays/Waybar/master/resources/custom_modules/mediaplayer.py
     *
    */
    "custom/spotify": {
        "exec": "/usr/bin/python3 ~/.config/waybar/scripts/spotify.py --player spotify_player &amp;",
        "format": "{} ÔÜº",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    }

    }, {

    "custom/wallpaper": {
        "format": "{} ÔÄæ",
        "tooltop": false
    }
}]
